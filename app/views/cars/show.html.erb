<div class="card-category rounded-0" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)),
  url(https://media.gazetadopovo.com.br/2019/05/29203514/ford-ka-freestyle-hatch-aventureiro-6-660x372.jpg)">
  <div class="container">
    <h1><strong><%= @car.brand %> - <%= @car.model %></strong></h1>
  </div>
</div>

<div class="container grill my-3">
  <div class="grill-description">
    <h3><strong><%= @car.model %></strong> </h3>
    <div class="description d-flex justify-content-between border-bottom mb-2">
      <p class="text-black-50"><%= @car.brand %></p>
    </div>
    <div class="type d-flex text-black-50">
      <p><strong>Tipo:</strong> </p>
      <p> <%= @car.car_type %></p>
    </div>
    <div class="d-flex">
      <h3 class="text-secondary mr-2" >Placa: </h3>
      <h3 class="text-secondary" id="price"> <%= @car.plate%></h3>
    </div>
    <div class="d-flex justify-content-between" style="width: 100%">
      <%= link_to edit_car_path(@car) do %>
        <i class="icon-edit"></i><p>Editar meu Carro</p>
      <% end %>
    </div>
    <%= link_to "Meus Carros", cars_path, class: "btn btn-primary" %>
  </div>
</div>
