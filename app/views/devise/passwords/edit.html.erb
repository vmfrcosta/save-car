<h2>Alterar senha</h2>

<%= simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
  <%= f.error_notification %>

  <%= f.input :reset_password_token, as: :hidden %>
  <%= f.full_error :reset_password_token %>

  <div class="form-inputs">
    <%= f.input :password,
                label: "New password",
                required: true,
                autofocus: true,
                hint: ("MinÃ­mo de #{@minimum_password_length} caracteres" if @minimum_password_length),
                input_html: { autocomplete: "nova-senha" }, label: 'Nova senha' %>
    <%= f.input :password_confirmation,
                label: "Confirme sua nova senha",
                required: true,
                input_html: { autocomplete: "nova-senha" }, label: 'Confirme sua nova senha' %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, "Alterar" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
