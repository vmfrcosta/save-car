<div class="container mt-3">
  <div class="align-items-center">
    <div class="col-sm-12 offset-md-3 col-md-6 text-primary">

      <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <p class="h3 mt-5 pt-5 mb-5" style="margin-bottom: 3vh">Por favor, faça o seu <strong>login</strong> abaixo!</p>

        <%= f.input :email, label_html: { class: 'text-secondary font-weight-bolder ml-4'},
                    required: false,
                    autofocus: true,
                    input_html: { autocomplete: "email", class: "rounded-pill pl-4 border-0" } %>
        <%= f.input :password, label_html: { class: 'text-secondary font-weight-bolder ml-4'},
                    required: false,
                    input_html: { autocomplete: "senha-atual", class: "rounded-pill pl-4 border-0" }, label: 'Senha' %>
        <%= f.input :remember_me,
                    label_html: { class: "text-secondary small font-weight-lighter" },
                    as: :boolean if devise_mapping.rememberable? %>
        <%= f.button :submit, "Acessar" , class: "mt-3 btn-primary btn-block rounded-pill" %>

        <%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
          <div class="text-center mt-2">
            <%= link_to "Esqueceu sua senha?", new_password_path(resource_name), :class => 'small font-weight-lighter' %><br/>
          </div>
        <% end %>


        <div class="row justify-content-center" style="height: 15vh">
          <div class="d-flex align-self-center text-secondary">
            <%- if devise_mapping.registerable? && controller_name != 'registrations' %>
                <p class="small mr-2 font-weight-lighter">Ainda não tem uma conta?</p>
                <%= link_to "Sign up", new_registration_path(resource_name), :class => 'small mr-2 align-self-center font-weight-bolder text-secondary' %><br />
            <% end %>
          </div>
        </div> 
      <% end %>
    </div>
  </div>
</div>