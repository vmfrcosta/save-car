<h2>Atualizar cadastro</h2>

<%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :email, required: true, autofocus: true %>

    <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
      <p>Currently waiting confirmation for: <%= resource.unconfirmed_email %></p>
    <% end %>

    <%= f.input :password,
                hint: "Mantenha vazio caso não queira alterar sua senha",
                required: false,
                input_html: { autocomplete: "nova-senha" }, label: 'Nova senha' %>
    <%= f.input :password_confirmation,
                required: false,
                input_html: { autocomplete: "nova-senha" }, label: 'Confirme sua nova senha' %>
    <%= f.input :current_password,
                hint: "Coloque sua senha atual para validar as alterações",
                required: true,
                input_html: { autocomplete: "senha-atual" }, label: 'Senha atual' %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, "Atualizar" %>
  </div>
<% end %>

<h3>Cancelar minha conta</h3>

<p>Insatisfeito? <%= link_to "Cancelar minha conta", registration_path(resource_name), data: { confirm: "Você tem certeza que deseja cancelar sua conta?" }, method: :delete %></p>

<%= link_to "Voltar", :back %>
