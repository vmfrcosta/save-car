<div class="container">
  <h2>Cadastro</h2>
  <p><small>Todos os campos são obrigatórios</small></p>

  <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= f.error_notification %>

    <div class="form-inputs">
      <%= f.input :first_name, required: false, label: 'Nome' %>
      <%= f.input :last_name, required: false, label: 'Sobrenome' %>
      <%= f.input :email,
                  required: false,
                  autofocus: true,
                  input_html: { autocomplete: "email" }%>
      <%= f.input :password,
                  required: false,
                  hint: ("Minímo de #{@minimum_password_length} caracteres" if @minimum_password_length),
                  input_html: { autocomplete: "new-password" }, label: 'Senha' %>
      <%= f.input :password_confirmation,
                  required: false,
                  input_html: { autocomplete: "new-password" }, label: 'Confirme a senha' %>
    </div>
      
    <div class="form-actions">
      <%= f.button :submit, "Sign up" %>
    </div>
  <% end %>

  <%= render "devise/shared/links" %>
</div>
