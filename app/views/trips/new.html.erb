<div class="cards" style="position: relative;">
	<div id="map" style="height: calc(100vh - 66px);"></div>

	<div class="cards" id="trips-info">
		<div class="px-3" id='trips-new'>
			<div class="lower-section section-divider"></div>
			<%= simple_form_for @trip do |f| %>
				<%= f.input :dest_address, input_html: { class: 'mt-2 rounded-pill border-0 bg-light',
										placeholder: 'Endereço do destino', id: 'dest-address' },
										label: false, required: true  %>

				<%= f.input :car_address, as: :hidden,
										input_html: { class: 'form-control w-100',
										placeholder: 'Endereço atual', id: 'car-address' },
										label: false, required: true  %>

				<%= f.input :car_lat, as: :hidden, input_html: { id: 'car-lat' }, label: false %>
				<%= f.input :car_long, as: :hidden, input_html: { id: 'car-long' }, label: false %>
				<%= f.input :car, as: :hidden, input_html: { value: current_user.cars.first }, label: false %>
				<%= f.input :total_price, as: :hidden, input_html: { id: 'total-price' } %>
				<%= f.input :total_distance, as: :hidden, input_html: { id: 'total-distance' } %>
				<%= f.button :submit, 'Buscar guincho', class: 'mt-3 btn-primary btn-block rounded-pill', id: 'search-btn' %>

				<div class="container mt-3 d-flex flex-column justify-content-around align-items-center" id='searching-winches' hidden>
					<div class="trip-infos mt-3 w-75">
						<div class="card-trip d-flex flex-column align-items-center">
							<!-- <h3 id='winch-user-name'>Searching</h3> -->
							<p id="winch-plate" hidden>Plate</p>
							<p id="distance" hidden>Total distance</p>
							<p id="price" hidden>Total price</p>
						</div>
					</div>
				</div>
		</div>
	</div>

</div>
